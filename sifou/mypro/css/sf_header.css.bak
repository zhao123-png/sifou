/*清空内外自带边距*/
*{
	padding:0;
	margin:0;
}

.header{
	width:100%;
	height:44px;
	display:flex;
	justify-content:space-around;
	border-top:4px solid rgb(0,154,97);
	border-bottom:1px solid #f0f0f0;
}


.header ul{
	list-style:none;
	display:flex;
	justify-content:flex-end;
	margin-top:10px;
}
.header ul li{
	width:38px;
	margin:0 12px;
	height:34px;
	text-align:center;
	font-size:17px;
	color:#b8b8b8;
	position:relative;
	left:40px;
}

.header ul li:first-child a:first-child{
	color:rgb(0,154,97);
}

.header input[id="search"]{
	width:250px;
	height:34px;
	border-radius:5px;
	box-sizing:border-box;
	padding:10px;
	margin-top:5px;
	position:relative;
	border:1px solid #ccc;
	right:45px;
	background-image:url(../img/header/search.png);
	background-repeat:no-repeat;
	background-size:24px;
	background-position:95%;
}

.header a{
	margin:auto 0;
	text-decoration:none;
}

.header a[id="login"]{
	margin-right:15px;
}

.header a[id="seg"]{
	position:relative;
	left:110px;
	font-size:20px;
}

a[id="reg"]{
	position:relative;
	right:180px;
	background-color:#009a61;
	width:70px;
	height:36px;
	border-radius:4px;
	line-height:36px;
	padding:0 10px;
	text-align:center;
	color:white;
}

a[id="login"]{
	position:relative;
	right:50px;
	color:#009a61;
}

